<%# Categories Index - All Categories %>
<div class="bg-white min-h-screen">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <%# Page Header %>
    <div class="text-center mb-12">
      <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">Shop by Category</h1>
      <p class="text-gray-600 text-base sm:text-lg max-w-2xl mx-auto">
        Browse our wide selection of fresh groceries organized by category
      </p>
    </div>

    <%# Main Categories Grid %>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @main_categories.each do |category| %>
        <div class="group">
          <%= link_to category_path(category), class: "block bg-white border-2 border-gray-200 rounded-xl p-6 hover:border-green-500 hover:shadow-xl transition-all duration-300" do %>
            <%# Icon %>
            <div class="text-center mb-4">
              <div class="inline-flex items-center justify-center w-20 h-20 bg-gradient-to-br from-green-100 to-green-200 rounded-full group-hover:scale-110 transition-transform duration-300">
                <span class="text-4xl">üì¶</span>
              </div>
            </div>

            <%# Category Name %>
            <h2 class="text-xl font-bold text-gray-900 text-center mb-2 group-hover:text-green-600 transition-colors">
              <%= category.name %>
            </h2>

            <%# Product Count %>
            <p class="text-center text-gray-600 mb-4">
              <%= pluralize(category.products.kept.count, 'product') %>
            </p>

            <%# Sub-categories if any %>
            <% if category.sub_categories.any? %>
              <div class="pt-4 border-t border-gray-200">
                <p class="text-sm font-medium text-gray-700 mb-2">Sub-categories:</p>
                <div class="flex flex-wrap gap-2">
                  <% category.sub_categories.limit(3).each do |sub| %>
                    <span class="inline-block px-2 py-1 text-xs bg-gray-100 text-gray-700 rounded">
                      <%= sub.name %>
                    </span>
                  <% end %>
                  <% if category.sub_categories.count > 3 %>
                    <span class="inline-block px-2 py-1 text-xs bg-gray-100 text-gray-700 rounded">
                      +<%= category.sub_categories.count - 3 %> more
                    </span>
                  <% end %>
                </div>
              </div>
            <% end %>

            <%# View Button %>
            <div class="mt-4 text-center">
              <span class="inline-flex items-center text-green-600 font-medium group-hover:underline">
                Browse
                <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </span>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

    <%# Empty State %>
    <% if @main_categories.empty? %>
      <div class="text-center py-16">
        <div class="text-6xl mb-4">üìÅ</div>
        <h3 class="text-xl font-semibold text-gray-900 mb-2">No Categories Available</h3>
        <p class="text-gray-600">Categories will appear here once they are added.</p>
      </div>
    <% end %>
  </div>
</div>

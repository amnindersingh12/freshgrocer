<%# Category Show - Products in Category %>
<div class="bg-white min-h-screen">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <%# Breadcrumb %>
    <nav class="flex mb-8 text-sm flex-wrap" aria-label="Breadcrumb">
      <ol class="inline-flex items-center space-x-2">
        <li><%= link_to "Home", root_path, class: "text-gray-500 hover:text-green-600" %></li>
        <li><span class="text-gray-400">/</span></li>
        <li><%= link_to "Categories", categories_path, class: "text-gray-500 hover:text-green-600" %></li>
        <li><span class="text-gray-400">/</span></li>
        <li class="text-gray-900 font-medium"><%= @category.name %></li>
      </ol>
    </nav>

    <%# Category Header %>
    <div class="mb-8">
      <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4"><%= @category.name %></h1>
      <p class="text-gray-600 text-base sm:text-lg">
        <%= pluralize(@category.products.kept.count, 'product') %> available
      </p>
    </div>

    <%# Sub-categories Filter (if any) %>
    <% if @sub_categories.any? %>
      <div class="mb-8 bg-gray-50 p-4 rounded-lg">
        <p class="text-sm font-medium text-gray-700 mb-3">Filter by sub-category:</p>
        <div class="flex flex-wrap gap-2">
          <%= link_to "All #{@category.name}", category_path(@category),
              class: "px-4 py-2 rounded-lg font-medium transition #{params[:sub_category_id].blank? ? 'bg-green-600 text-white' : 'bg-white text-gray-700 border border-gray-300 hover:border-green-500'}" %>

          <% @sub_categories.each do |sub| %>
            <%= link_to sub.name, category_path(@category, sub_category_id: sub.id),
                class: "px-4 py-2 rounded-lg font-medium transition #{params[:sub_category_id].to_i == sub.id ? 'bg-green-600 text-white' : 'bg-white text-gray-700 border border-gray-300 hover:border-green-500'}" %>
          <% end %>
        </div>
      </div>
    <% end %>

    <%# Products Grid %>
    <% if @products.any? %>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 mb-8">
        <% @products.each do |product| %>
          <div class="bg-white border border-gray-200 rounded-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
            <%# Product Image Placeholder %>
            <div class="h-48 bg-gradient-to-br from-green-100 to-green-200 flex items-center justify-center">
              <span class="text-6xl">ðŸ¥¬</span>
            </div>

            <%# Product Info %>
            <div class="p-4">
              <%# Product Name %>
              <h3 class="text-lg font-semibold text-gray-900 mb-2 line-clamp-2 min-h-14">
                <%= product.name %>
              </h3>

              <%# Brand %>
              <p class="text-sm text-gray-500 mb-2">
                <span class="font-medium">Brand:</span> <%= product.brand %>
              </p>

              <%# Description %>
              <p class="text-sm text-gray-600 mb-4 line-clamp-2">
                <%= product.description %>
              </p>

              <%# Price and Stock %>
              <div class="mb-4">
                <% if product.product_variants.kept.any? %>
                  <div class="flex items-center justify-between">
                    <p class="text-xl font-bold text-green-600">
                      From $<%= number_with_precision(product.product_variants.kept.minimum(:price), precision: 2) %>
                    </p>
                    <% if product.in_stock? %>
                      <span class="text-xs text-green-600 font-medium">In Stock</span>
                    <% else %>
                      <span class="text-xs text-red-600 font-medium">Out of Stock</span>
                    <% end %>
                  </div>
                <% else %>
                  <p class="text-sm text-gray-500">No variants available</p>
                <% end %>
              </div>

              <%# View Details Button %>
              <%= link_to product_path(product), class: "block w-full text-center bg-green-600 text-white py-2.5 rounded-lg hover:bg-green-700 transition font-medium min-h-10", data: { turbo_frame: "_top" } do %>
                View Details
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <%# Pagination %>
      <div class="flex justify-center">
        <%= paginate @products %>
      </div>
    <% else %>
      <%# Empty State %>
      <div class="text-center py-16">
        <div class="text-6xl mb-4">ðŸ“¦</div>
        <h3 class="text-xl font-semibold text-gray-900 mb-2">No products in this category</h3>
        <p class="text-gray-600 mb-6">Check back later for new products</p>
        <%= link_to "Browse All Categories", categories_path, class: "inline-block px-6 py-3 bg-green-600 text-white rounded-lg hover:bg-green-700 transition font-medium" %>
      </div>
    <% end %>
  </div>
</div>

<%# Order Confirmation Page %>
<div class="bg-gray-50 min-h-screen py-8">
  <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
    <%# Success Message %>
    <div class="bg-white rounded-lg shadow-md p-8 sm:p-12 text-center">
      <%# Success Icon %>
      <div class="mb-6">
        <div class="inline-flex items-center justify-center w-20 h-20 bg-green-100 rounded-full">
          <svg class="w-12 h-12 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
        </div>
      </div>

      <h1 class="text-3xl font-bold text-gray-900 mb-4">Order Confirmed!</h1>
      <p class="text-lg text-gray-600 mb-8">
        Thank you for your order. We've received your purchase and will start processing it shortly.
      </p>

      <%# Order Number %>
      <div class="mb-8 p-6 bg-gray-50 rounded-lg">
        <p class="text-sm text-gray-600 mb-1">Order Number</p>
        <p class="text-2xl font-bold text-green-600">#<%= @order.id %></p>
      </div>

      <%# Order Details %>
      <div class="text-left mb-8 space-y-6">
        <%# Delivery Info %>
        <div class="pb-6 border-b border-gray-200">
          <h2 class="text-lg font-semibold text-gray-900 mb-4">Delivery Information</h2>

          <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
            <div>
              <p class="text-sm text-gray-600 mb-1">Delivery Address</p>
              <p class="font-medium"><%= @order.address.street %></p>
              <p class="text-sm text-gray-700"><%= @order.address.city %>, <%= @order.address.state %> <%= @order.address.zip_code %></p>
              <p class="text-sm text-gray-700"><%= @order.address.country %></p>
            </div>

            <div>
              <p class="text-sm text-gray-600 mb-1">Delivery Time</p>
              <p class="font-medium"><%= @order.delivery_slot.start_time.strftime('%A, %B %d') %></p>
              <p class="text-sm text-gray-700">
                <%= @order.delivery_slot.start_time.strftime('%I:%M %p') %> -
                <%= @order.delivery_slot.end_time.strftime('%I:%M %p') %>
              </p>
            </div>
          </div>
        </div>

        <%# Order Items %>
        <div class="pb-6 border-b border-gray-200">
          <h2 class="text-lg font-semibold text-gray-900 mb-4">Order Items</h2>
          <div class="space-y-4">
            <% @order.order_items.includes(:product_variant).each do |item| %>
              <div class="flex items-center justify-between py-2">
                <div class="flex-1">
                  <p class="font-medium"><%= item.product_variant.product.name %></p>
                  <p class="text-sm text-gray-600">
                    <%= item.product_variant.variant_name %> - Qty: <%= item.quantity %>
                  </p>
                </div>
                <p class="font-semibold text-gray-900">
                  $<%= number_with_precision(item.price_at_purchase * item.quantity, precision: 2) %>
                </p>
              </div>
            <% end %>
          </div>
        </div>

        <%# Order Summary %>
        <div>
          <h2 class="text-lg font-semibold text-gray-900 mb-4">Order Summary</h2>
          <div class="space-y-2">
            <div class="flex justify-between">
              <span class="text-gray-600">Subtotal:</span>
              <span class="font-semibold">$<%= number_with_precision(@order.total_price, precision: 2) %></span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600">Shipping:</span>
              <span class="font-semibold text-green-600">FREE</span>
            </div>
            <div class="border-t border-gray-300 pt-2 mt-2 flex justify-between text-lg font-bold">
              <span>Total:</span>
              <span class="text-green-600">$<%= number_with_precision(@order.total_price, precision: 2) %></span>
            </div>
          </div>
        </div>
      </div>

      <%# Action Buttons %>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <%= link_to "View Order Details", account_order_path(@order), class: "px-6 py-3 border border-green-600 text-green-600 rounded-lg hover:bg-green-50 font-medium" %>
        <%= link_to "Continue Shopping", products_path, class: "px-6 py-3 bg-green-600 text-white rounded-lg hover:bg-green-700 font-medium", data: { turbo_frame: "_top" } %>
      </div>

      <%# Email Confirmation Notice %>
      <p class="mt-8 text-sm text-gray-500">
        A confirmation email has been sent to <%= current_user.email %>
      </p>
    </div>
  </div>
</div>

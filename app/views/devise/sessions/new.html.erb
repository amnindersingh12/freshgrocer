<div class="min-h-[calc(100vh-200px)] flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <%# Header %>
    <div>
      <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
        Sign in to your account
      </h2>
      <p class="mt-2 text-center text-sm text-gray-600">
        Or
        <%= link_to "create a new account", new_registration_path(resource_name), class: "font-medium text-green-600 hover:text-green-500" %>
      </p>
    </div>

    <%# Form %>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "mt-8 space-y-6" }) do |f| %>
      <input type="hidden" name="remember" value="true">
      <div class="rounded-md shadow-sm space-y-4">
        <%# Email Field %>
        <div>
          <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.email_field :email,
              autofocus: true,
              autocomplete: "email",
              required: true,
              class: "appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 focus:z-10 sm:text-sm" %>
        </div>

        <%# Password Field %>
        <div>
          <div class="flex items-center justify-between mb-1">
            <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
            <% if devise_mapping.recoverable? %>
              <%= link_to "Forgot password?", new_password_path(resource_name), class: "text-sm font-medium text-green-600 hover:text-green-500" %>
            <% end %>
          </div>
          <%= f.password_field :password,
              autocomplete: "current-password",
              required: true,
              class: "appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 focus:z-10 sm:text-sm" %>
        </div>
      </div>

      <%# Remember Me %>
      <% if devise_mapping.rememberable? %>
        <div class="flex items-center">
          <%= f.check_box :remember_me, class: "h-4 w-4 text-green-600 focus:ring-green-500 border-gray-300 rounded cursor-pointer" %>
          <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-900 cursor-pointer" %>
        </div>
      <% end %>

      <%# Submit Button %>
      <div>
        <%= f.submit "Sign in", class: "group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-medium rounded-lg text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-colors cursor-pointer" %>
      </div>
    <% end %>

    <%# Additional Links %>
    <div class="text-center text-sm">
      <% if devise_mapping.registerable? && controller_name != 'registrations' %>
        <p class="text-gray-600">
          Don't have an account?
          <%= link_to "Sign up", new_registration_path(resource_name), class: "font-medium text-green-600 hover:text-green-500" %>
        </p>
      <% end %>
    </div>
  </div>
</div>

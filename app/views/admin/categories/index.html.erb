<%# Admin Categories Index %>
<div class="p-6">
  <div class="mb-8 flex justify-between items-center">
    <h1 class="text-3xl font-bold">Categories</h1>
    <%= link_to "Add Category", new_admin_category_path, class: "px-6 py-3 bg-green-600 text-white rounded-lg hover:bg-green-700" %>
  </div>

  <div class="bg-white rounded-lg shadow-md overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Name</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Slug</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Products</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Parent</th>
          <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Actions</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% @categories.each do |category| %>
          <tr>
            <td class="px-6 py-4 font-medium"><%= category.name %></td>
            <td class="px-6 py-4 text-sm text-gray-600"><%= category.slug %></td>
            <td class="px-6 py-4"><%= category.products.count %></td>
            <td class="px-6 py-4 text-sm"><%= category.parent&.name || '-' %></td>
            <td class="px-6 py-4 text-right">
              <%= link_to "Edit", edit_admin_category_path(category), class: "text-green-600 hover:text-green-900 mr-3" %>
              <%= button_to "Delete", admin_category_path(category), method: :delete,
                  data: { turbo_confirm: "Delete this category?" },
                  class: "text-red-600 hover:text-red-900" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

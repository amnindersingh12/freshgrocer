<%# Category Form Partial %>
<%= form_with model: [:admin, category], class: "space-y-6" do |f| %>
  <% if category.errors.any? %>
    <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg">
      <p class="font-medium"><%= pluralize(category.errors.count, "error") %>:</p>
      <ul class="list-disc list-inside text-sm">
        <% category.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :name, class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= f.text_field :name, class: "w-full px-4 py-3 border rounded-lg focus:ring-2 focus:ring-green-500", placeholder: "Fresh Produce" %>
  </div>

  <div>
    <%= f.label :parent_id, "Parent Category (optional)", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= f.collection_select :parent_id, Category.where.not(id: category.id), :id, :name,
        { include_blank: "None (Top Level)" },
        class: "w-full px-4 py-3 border rounded-lg" %>
  </div>

  <div class="flex gap-4 pt-4 border-t">
    <%= f.submit category.persisted? ? "Update Category" : "Create Category",
        class: "px-6 py-3 bg-green-600 text-white rounded-lg hover:bg-green-700 font-bold cursor-pointer" %>
    <%= link_to "Cancel", admin_categories_path, class: "px-6 py-3 border text-gray-700 rounded-lg hover:bg-gray-50" %>
  </div>
<% end %>

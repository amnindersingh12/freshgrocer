<%# Product Variant Form Partial %>
<%= form_with model: [:admin, @product, variant], class: "space-y-6" do |f| %>
  <%# Error Messages %>
  <% if variant.errors.any? %>
    <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg">
      <p class="font-medium mb-2"><%= pluralize(variant.errors.count, "error") %> prohibited this variant from being saved:</p>
      <ul class="list-disc list-inside text-sm">
        <% variant.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :variant_name, "Variant Name (e.g., 1kg, 500g, 6-pack)", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= f.text_field :variant_name,
        class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500",
        placeholder: "1kg" %>
  </div>
  <div>
    <%= f.label :price, "Price ($)", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= f.number_field :price,
        step: 0.01, min: 0,
        class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500",
        placeholder: "2.99" %>
  </div>

  <div>
    <%= f.label :stock_quantity, "Stock Quantity", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= f.number_field :stock_quantity,
        min: 0,
        class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500",
        placeholder: "100" %>
  </div>

  <div class="flex gap-4 pt-4 border-t">
    <%= f.submit variant.persisted? ? "Update Variant" : "Create Variant",
        class: "px-6 py-3 bg-green-600 text-white rounded-lg hover:bg-green-700 font-bold cursor-pointer" %>
    <%= link_to "Cancel", admin_product_path(@product),
        class: "px-6 py-3 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 font-medium" %>
  </div>
<% end %>

<%# Product Variant Form Partial %>
<%= form_with model: [:admin, @product, variant], class: "space-y-6" do |f| %>
  <%# Error Messages %>
  <% if variant.errors.any? %>
    <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg">
      <p class="font-medium mb-2"><%= pluralize(variant.errors.count, "error") %> prohibited this variant from being saved:</p>
      <ul class="list-disc list-inside text-sm">
        <% variant.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <%# Left Column %>
    <div class="space-y-6">
      <%# Variant Name %>
      <div>
        <%= f.label :variant_name, "Variant Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_field :variant_name,
            class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent",
            placeholder: "e.g., 1kg, 500g, 6-pack, Large" %>
        <p class="mt-1 text-xs text-gray-500">Size, weight, or quantity description</p>
      </div>

      <%# SKU %>
      <div>
        <%= f.label :sku, "SKU (Stock Keeping Unit)", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_field :sku,
            class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent",
            placeholder: variant.persisted? ? variant.sku : "AUTO-#{@product.name&.parameterize&.upcase}-#{rand(1000..9999)}",
            value: variant.sku || "#{@product.name&.parameterize&.upcase}-#{rand(1000..9999)}" %>
        <p class="mt-1 text-xs text-gray-500">Unique identifier for this variant (auto-generated if left blank)</p>
      </div>

      <%# Stock Quantity %>
      <div>
        <%= f.label :stock_quantity, "Stock Quantity", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.number_field :stock_quantity,
            min: 0,
            class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent",
            placeholder: "100" %>
        <p class="mt-1 text-xs text-gray-500">Available inventory for this variant</p>
      </div>
    </div>

    <%# Right Column - Pricing %>
    <div class="space-y-6">
      <%# Regular Price %>
      <div>
        <%= f.label :price, "Regular Price ($)", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.number_field :price,
            step: 0.01, min: 0,
            class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent",
            placeholder: "2.99",
            data: { action: "input->discount#calculateDiscount" } %>
        <p class="mt-1 text-xs text-gray-500">Current selling price</p>
      </div>

      <%# Compare at Price (Original Price) %>
      <div>
        <%= f.label :compare_at_price, "Compare at Price ($)", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.number_field :compare_at_price,
            step: 0.01, min: 0,
            class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent",
            placeholder: "3.99" %>
        <p class="mt-1 text-xs text-gray-500">Optional: Original price before discount (leave blank if no discount)</p>
      </div>

      <%# Discount Preview %>
      <% if variant.compare_at_price.present? && variant.compare_at_price > variant.price %>
        <div class="bg-green-50 border border-green-200 rounded-lg p-4">
          <h4 class="font-medium text-green-900 mb-2">ðŸ’° Discount Details:</h4>
          <div class="space-y-1 text-sm">
            <p class="text-green-800">
              <span class="font-semibold">Discount:</span>
              <%= variant.discount_percentage %>% OFF
            </p>
            <p class="text-green-800">
              <span class="font-semibold">Savings:</span>
              $<%= number_with_precision(variant.savings_amount, precision: 2) %>
            </p>
            <p class="text-green-800">
              <span class="font-semibold">Original:</span>
              <del>$<%= number_with_precision(variant.compare_at_price, precision: 2) %></del>
            </p>
            <p class="text-green-900 font-bold">
              <span class="font-semibold">Sale Price:</span>
              $<%= number_with_precision(variant.price, precision: 2) %>
            </p>
          </div>
        </div>
      <% end %>

      <%# Combo Deal Checkbox %>
      <div class="flex items-start">
        <div class="flex items-center h-5">
          <%= f.check_box :is_combo_deal,
              class: "w-4 h-4 text-green-600 bg-gray-100 border-gray-300 rounded focus:ring-green-500 focus:ring-2" %>
        </div>
        <div class="ml-3">
          <%= f.label :is_combo_deal, class: "font-medium text-gray-700" do %>
            Mark as Combo Deal
            <p class="text-sm text-gray-500 font-normal">Show this variant in combo deals section</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <%# Pricing Tips %>
  <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
    <h4 class="font-medium text-blue-900 mb-2">ðŸ’¡ Pricing Tips:</h4>
    <ul class="text-sm text-blue-800 space-y-1 list-disc list-inside">
      <li><strong>Regular Price:</strong> The current selling price customers will pay</li>
      <li><strong>Compare at Price:</strong> Original price to show discounts (must be higher than regular price)</li>
      <li><strong>Combo Deal:</strong> Check this to feature in special offers section</li>
      <li><strong>Stock Quantity:</strong> Set to 0 to mark as "Out of Stock"</li>
    </ul>
  </div>

  <%# Form Actions %>
  <div class="flex flex-col sm:flex-row gap-4 pt-6 border-t border-gray-200">
    <%= f.submit variant.persisted? ? "Update Variant" : "Create Variant",
        class: "px-6 py-3 bg-green-600 text-white rounded-lg hover:bg-green-700 font-bold cursor-pointer transition-colors" %>
    <%= link_to "Cancel", admin_product_path(@product),
        class: "text-center px-6 py-3 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 font-medium transition-colors" %>
  </div>
<% end %>

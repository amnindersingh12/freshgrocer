<%# Product Form Partial %>
<%= form_with model: [:admin, product], class: "space-y-6" do |f| %>
  <%# Error Messages %>
  <% if product.errors.any? %>
    <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg">
      <p class="font-medium mb-2"><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</p>
      <ul class="list-disc list-inside text-sm">
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%# Product Name %>
  <div>
    <%= f.label :name, "Product Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= f.text_field :name,
        class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent",
        placeholder: "Organic Bananas" %>
    <p class="mt-1 text-sm text-gray-500">This will be used to generate the URL slug</p>
  </div>

  <%# Description %>
  <div>
    <%= f.label :description, "Description", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= f.text_area :description,
        rows: 5,
        class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent",
        placeholder: "Fresh, organically grown bananas..." %>
  </div>

  <%# Category %>
  <div>
    <%= f.label :category_id, "Category", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= f.collection_select :category_id,
        Category.all,
        :id,
        :name,
        { prompt: "Select a category" },
        class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent" %>
  </div>

  <%# Base Price %>
  <div>
    <%= f.label :base_price, "Base Price ($)", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= f.number_field :base_price,
        step: 0.01,
        min: 0,
        class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent",
        placeholder: "2.99" %>
    <p class="mt-1 text-sm text-gray-500">This is the default price. Variants can have their own prices.</p>
  </div>

  <%# Form Actions %>
  <div class="flex flex-col sm:flex-row gap-4 pt-4 border-t border-gray-200">
    <%= f.submit product.persisted? ? "Update Product" : "Create Product",
        class: "px-6 py-3 bg-green-600 text-white rounded-lg hover:bg-green-700 font-bold cursor-pointer" %>
    <%= link_to "Cancel", admin_products_path,
        class: "text-center px-6 py-3 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 font-medium" %>
  </div>
<% end %>

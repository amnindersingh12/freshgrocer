<%# Admin Product Detail %>
<div class="p-6">
  <%# Breadcrumb %>
  <nav class="mb-6 text-sm">
    <%= link_to "Products", admin_products_path, class: "text-green-600 hover:text-green-700" %>
    <span class="mx-2 text-gray-400">/</span>
    <span class="text-gray-600"><%= @product.name %></span>
  </nav>

  <%# Page Header %>
  <div class="mb-8 flex flex-col sm:flex-row sm:items-start sm:justify-between">
    <div>
      <h1 class="text-3xl font-bold text-gray-900"><%= @product.name %></h1>
      <p class="text-gray-600 mt-2">SKU: <%= @product.slug %></p>
    </div>
    <div class="mt-4 sm:mt-0 flex gap-2">
      <%= link_to "Edit Product", edit_admin_product_path(@product),
          class: "px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 font-medium" %>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <%# Product Details %>
    <div class="lg:col-span-2 space-y-6">
      <%# Product Images %>
      <% if @product.images.attached? %>
        <div class="bg-white rounded-lg shadow-md p-6">
          <h2 class="text-xl font-semibold text-gray-900 mb-4">Product Images</h2>
          <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
            <% @product.images.each_with_index do |image, index| %>
              <div class="relative group">
                <%= image_tag image.variant(resize_to_limit: [300, 300]),
                    class: "w-full h-48 object-cover rounded-lg border-2 #{index == 0 ? 'border-green-500' : 'border-gray-200'}" %>
                <% if index == 0 %>
                  <span class="absolute top-2 left-2 bg-green-600 text-white text-xs px-2 py-1 rounded">
                    Primary
                  </span>
                <% end %>
                <%= link_to "View Full Size", rails_blob_path(image, disposition: "attachment"),
                    target: "_blank",
                    class: "absolute bottom-2 right-2 bg-white/90 text-gray-700 text-xs px-2 py-1 rounded opacity-0 group-hover:opacity-100 transition-opacity" %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <div class="bg-white rounded-lg shadow-md p-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Product Information</h2>

        <dl class="space-y-4">
          <div>
            <dt class="text-sm font-medium text-gray-600">Name</dt>
            <dd class="mt-1 text-lg text-gray-900"><%= @product.name %></dd>
          </div>

          <div>
            <dt class="text-sm font-medium text-gray-600">Brand</dt>
            <dd class="mt-1 text-gray-900"><%= @product.brand %></dd>
          </div>

          <div>
            <dt class="text-sm font-medium text-gray-600">Description</dt>
            <dd class="mt-1 text-gray-900"><%= @product.description || 'No description provided' %></dd>
          </div>

          <div>
            <dt class="text-sm font-medium text-gray-600">Category</dt>
            <dd class="mt-1 text-gray-900"><%= @product.category.name %></dd>
          </div>

          <div>
            <dt class="text-sm font-medium text-gray-600">Featured Product</dt>
            <dd class="mt-1">
              <% if @product.featured? %>
                <span class="inline-flex items-center px-3 py-1 bg-yellow-100 text-yellow-800 text-sm font-medium rounded-full">
                  ‚≠ê Featured
                </span>
              <% else %>
                <span class="text-gray-500">Not featured</span>
              <% end %>
            </dd>
          </div>

          <div>
            <dt class="text-sm font-medium text-gray-600">URL Slug</dt>
            <dd class="mt-1 text-gray-900 font-mono"><%= @product.slug %></dd>
          </div>
        </dl>
      </div>

      <%# Product Variants %>
      <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-xl font-semibold text-gray-900">Product Variants</h2>
          <%= link_to "Add Variant", new_admin_product_product_variant_path(@product),
              class: "px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 font-medium text-sm" %>
        </div>

        <% if @product.product_variants.any? %>
          <div class="overflow-x-auto">
            <table class="min-w-full">
              <thead class="bg-gray-50">
                <tr>
                  <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">SKU</th>
                  <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Variant</th>
                  <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Price</th>
                  <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Stock</th>
                  <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
                  <th class="px-4 py-2 text-right text-xs font-medium text-gray-500 uppercase">Actions</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-200">
                <% @product.product_variants.each do |variant| %>
                  <tr class="<%= 'bg-gray-50' if variant.discarded? %>">
                    <td class="px-4 py-3 text-sm font-mono text-gray-600"><%= variant.sku %></td>
                    <td class="px-4 py-3 text-sm text-gray-900">
                      <%= variant.variant_name %>
                      <% if variant.is_combo_deal? %>
                        <span class="ml-2 px-2 py-1 bg-purple-100 text-purple-800 text-xs font-medium rounded">Combo</span>
                      <% end %>
                    </td>
                    <td class="px-4 py-3 text-sm">
                      <div class="flex flex-col">
                        <span class="font-semibold text-gray-900">$<%= number_with_precision(variant.price, precision: 2) %></span>
                        <% if variant.compare_at_price.present? && variant.compare_at_price > variant.price %>
                          <span class="text-xs text-gray-500">
                            <del>$<%= number_with_precision(variant.compare_at_price, precision: 2) %></del>
                            <span class="text-green-600 font-medium ml-1">(<%= variant.discount_percentage %>% off)</span>
                          </span>
                        <% end %>
                      </div>
                    </td>
                    <td class="px-4 py-3 text-sm">
                      <span class="<%= variant.stock_quantity > 0 ? 'text-gray-900' : 'text-red-600 font-medium' %>">
                        <%= variant.stock_quantity %>
                      </span>
                      <% if variant.stock_quantity == 0 %>
                        <span class="ml-2 px-2 py-1 bg-red-100 text-red-800 text-xs font-medium rounded">Out of Stock</span>
                      <% elsif variant.stock_quantity < 10 %>
                        <span class="ml-2 px-2 py-1 bg-yellow-100 text-yellow-800 text-xs font-medium rounded">Low Stock</span>
                      <% end %>
                    </td>
                    <td class="px-4 py-3 text-sm">
                      <% if variant.discarded? %>
                        <span class="px-2 py-1 bg-red-100 text-red-800 text-xs font-medium rounded">Archived</span>
                      <% else %>
                        <span class="px-2 py-1 bg-green-100 text-green-800 text-xs font-medium rounded">Active</span>
                      <% end %>
                    </td>
                    <td class="px-4 py-3 text-right text-sm">
                      <%= link_to "Edit", edit_admin_product_product_variant_path(@product, variant),
                          class: "text-green-600 hover:text-green-900 mr-3" %>
                      <% unless variant.discarded? %>
                        <%= button_to "Archive", admin_product_product_variant_path(@product, variant),
                            method: :delete,
                            data: { turbo_confirm: "Archive this variant?" },
                            class: "text-red-600 hover:text-red-900 inline" %>
                      <% else %>
                        <%= button_to "Restore", admin_product_product_variant_path(@product, variant),
                            method: :delete,
                            class: "text-green-600 hover:text-green-900 inline" %>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <p class="text-gray-500 text-center py-8">No variants added yet</p>
        <% end %>
      </div>
    </div>

    <%# Sidebar %>
    <div class="lg:col-span-1 space-y-6">
      <%# Status Card %>
      <div class="bg-white rounded-lg shadow-md p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Status</h3>
        <% if @product.discarded? %>
          <span class="inline-block px-4 py-2 bg-red-100 text-red-800 font-medium rounded-lg mb-4">Archived</span>
          <%= button_to "Restore Product", admin_product_path(@product),
              method: :delete,
              class: "w-full px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 font-medium" %>
        <% else %>
          <span class="inline-block px-4 py-2 bg-green-100 text-green-800 font-medium rounded-lg mb-4">Active</span>
          <%= button_to "Archive Product", admin_product_path(@product),
              method: :delete,
              data: { turbo_confirm: "Archive this product?" },
              class: "w-full px-4 py-2 border border-red-600 text-red-600 rounded-lg hover:bg-red-50 font-medium" %>
        <% end %>
      </div>

      <%# Inventory Summary %>
      <div class="bg-white rounded-lg shadow-md p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Inventory</h3>
        <dl class="space-y-2">
          <div class="flex justify-between">
            <dt class="text-sm text-gray-600">Total Stock:</dt>
            <dd class="text-sm font-semibold text-gray-900"><%= @product.product_variants.sum(:stock_quantity) %></dd>
          </div>
          <div class="flex justify-between">
            <dt class="text-sm text-gray-600">Variants:</dt>
            <dd class="text-sm font-semibold text-gray-900"><%= @product.product_variants.count %></dd>
          </div>
        </dl>
      </div>

      <%# Timestamps %>
      <div class="bg-white rounded-lg shadow-md p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Details</h3>
        <dl class="space-y-2 text-xs">
          <div>
            <dt class="text-gray-600">Created:</dt>
            <dd class="text-gray-900"><%= @product.created_at.strftime('%B %d, %Y') %></dd>
          </div>
          <div>
            <dt class="text-gray-600">Last Updated:</dt>
            <dd class="text-gray-900"><%= @product.updated_at.strftime('%B %d, %Y') %></dd>
          </div>
        </dl>
      </div>
    </div>
  </div>
</div>

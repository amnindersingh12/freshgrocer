<%# Admin Dashboard %>
<div class="p-6">
  <%# Page Header %>
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Dashboard</h1>
    <p class="text-gray-600 mt-2">Welcome back, <%= current_user.email %></p>
  </div>

  <%# Stats Cards %>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <%# Total Sales %>
    <div class="bg-white rounded-lg shadow-md p-6">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-sm font-medium text-gray-600">Total Sales</h3>
        <div class="p-3 bg-green-100 rounded-lg">
          <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
      </div>
      <p class="text-3xl font-bold text-gray-900">$<%= number_with_precision(@total_sales, precision: 2) %></p>
      <p class="text-sm text-gray-600 mt-2">All time revenue</p>
    </div>

    <%# New Orders (24h) %>
    <div class="bg-white rounded-lg shadow-md p-6">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-sm font-medium text-gray-600">New Orders (24h)</h3>
        <div class="p-3 bg-blue-100 rounded-lg">
          <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
          </svg>
        </div>
      </div>
      <p class="text-3xl font-bold text-gray-900"><%= @new_orders_count %></p>
      <p class="text-sm text-gray-600 mt-2">Last 24 hours</p>
    </div>

    <%# Total Products %>
    <div class="bg-white rounded-lg shadow-md p-6">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-sm font-medium text-gray-600">Total Products</h3>
        <div class="p-3 bg-purple-100 rounded-lg">
          <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
          </svg>
        </div>
      </div>
      <p class="text-3xl font-bold text-gray-900"><%= @products_count %></p>
      <p class="text-sm text-gray-600 mt-2">Active products</p>
    </div>

    <%# New Customers (30d) %>
    <div class="bg-white rounded-lg shadow-md p-6">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-sm font-medium text-gray-600">New Customers (30d)</h3>
        <div class="p-3 bg-yellow-100 rounded-lg">
          <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
          </svg>
        </div>
      </div>
      <p class="text-3xl font-bold text-gray-900"><%= @new_customers_count %></p>
      <p class="text-sm text-gray-600 mt-2">Last 30 days</p>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <%# Top Products %>
    <div class="bg-white rounded-lg shadow-md p-6">
      <h2 class="text-xl font-semibold text-gray-900 mb-6">Top 5 Products by Sales</h2>

      <% if @top_products.any? %>
        <div class="space-y-4">
          <% @top_products.each_with_index do |product, index| %>
            <div class="flex items-center">
              <div class="flex-shrink-0 w-8 h-8 bg-green-100 text-green-800 rounded-full flex items-center justify-center font-bold text-sm">
                <%= index + 1 %>
              </div>
              <div class="ml-4 flex-1">
                <p class="font-medium text-gray-900"><%= product.name %></p>
                <p class="text-sm text-gray-600"><%= product.category.name %></p>
              </div>
              <div class="text-right">
                <p class="font-bold text-gray-900"><%= product.total_sold %> sold</p>
                <p class="text-sm text-green-600">
                  $<%= number_with_precision(product.revenue, precision: 2) %>
                </p>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-gray-500 text-center py-8">No sales data available yet</p>
      <% end %>
    </div>

    <%# Recent Orders %>
    <div class="bg-white rounded-lg shadow-md p-6">
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-xl font-semibold text-gray-900">Recent Orders</h2>
        <%= link_to "View All", admin_orders_path, class: "text-green-600 hover:text-green-700 font-medium text-sm" %>
      </div>

      <% if @recent_orders.any? %>
        <div class="space-y-4">
          <% @recent_orders.each do |order| %>
            <div class="pb-4 border-b border-gray-200 last:border-b-0">
              <div class="flex items-center justify-between mb-2">
                <p class="font-medium text-gray-900">
                  Order #<%= order.id %>
                </p>
                <span class="px-3 py-1 <%= case order.status
                  when 'pending' then 'bg-yellow-100 text-yellow-800'
                  when 'processing' then 'bg-blue-100 text-blue-800'
                  when 'shipped' then 'bg-purple-100 text-purple-800'
                  when 'delivered' then 'bg-green-100 text-green-800'
                  when 'cancelled' then 'bg-red-100 text-red-800'
                  else 'bg-gray-100 text-gray-800'
                end %> text-xs font-medium rounded-full">
                  <%= order.status.titleize %>
                </span>
              </div>
              <div class="flex items-center justify-between text-sm">
                <p class="text-gray-600"><%= order.user.email %></p>
                <p class="font-semibold text-gray-900">
                  $<%= number_with_precision(order.total_price, precision: 2) %>
                </p>
              </div>
              <p class="text-xs text-gray-500 mt-1">
                <%= time_ago_in_words(order.created_at) %> ago
              </p>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-gray-500 text-center py-8">No orders yet</p>
      <% end %>
    </div>
  </div>
</div>

<%# Products Index - Product Listing Page %>
<div class="bg-white min-h-screen">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <%# Page Header %>
    <div class="mb-8">
      <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">Our Products</h1>
      <p class="text-gray-600 text-base sm:text-lg">Browse our selection of fresh groceries and daily essentials</p>
    </div>

    <%# Search and Filter Bar %>
    <div class="bg-gray-50 p-4 rounded-lg mb-8">
      <%= form_with url: products_path, method: :get, class: "space-y-4 sm:space-y-0 sm:flex sm:gap-4", data: { turbo_frame: "products" } do |f| %>
        <%# Search Input %>
        <div class="flex-1">
          <%= f.text_field :search,
              value: params[:search],
              placeholder: "Search products...",
              class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent text-base" %>
        </div>

        <%# Category Filter %>
        <div class="flex-1">
          <%= f.select :category_id,
              options_from_collection_for_select(Category.all, :id, :name, params[:category_id]),
              { include_blank: "All Categories" },
              class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 text-base" %>
        </div>

        <%# Submit Button %>
        <div>
          <%= f.submit "Search", class: "w-full sm:w-auto px-6 py-3 bg-green-600 text-white rounded-lg hover:bg-green-700 transition font-medium min-h-12" %>
        </div>
      <% end %>
    </div>

    <%# Products Grid %>
    <%= turbo_frame_tag "products" do %>
      <% if @products.any? %>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 mb-8">
          <% @products.each do |product| %>
            <div class="bg-white border border-gray-200 rounded-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
              <%# Product Image Placeholder %>
              <div class="h-48 bg-gradient-to-br from-green-100 to-green-200 flex items-center justify-center">
                <span class="text-6xl">ðŸ¥¬</span>
              </div>

              <%# Product Info %>
              <div class="p-4">
                <%# Category Badge %>
                <div class="mb-2">
                  <span class="inline-block px-2 py-1 text-xs font-semibold text-green-800 bg-green-100 rounded">
                    <%= product.category.name %>
                  </span>
                </div>

                <%# Product Name %>
                <h3 class="text-lg font-semibold text-gray-900 mb-2 line-clamp-2 min-h-14">
                  <%= product.name %>
                </h3>

                <%# Brand %>
                <p class="text-sm text-gray-500 mb-2">
                  <span class="font-medium">Brand:</span> <%= product.brand %>
                </p>

                <%# Description %>
                <p class="text-sm text-gray-600 mb-4 line-clamp-2">
                  <%= product.description %>
                </p>

                <%# Price and Stock %>
                <div class="mb-4">
                  <% if product.product_variants.kept.any? %>
                    <div class="flex items-center justify-between">
                      <p class="text-xl font-bold text-green-600">
                        From $<%= number_with_precision(product.product_variants.kept.minimum(:price), precision: 2) %>
                      </p>
                      <% if product.in_stock? %>
                        <span class="text-xs text-green-600 font-medium">In Stock</span>
                      <% else %>
                        <span class="text-xs text-red-600 font-medium">Out of Stock</span>
                      <% end %>
                    </div>
                  <% else %>
                    <p class="text-sm text-gray-500">No variants available</p>
                  <% end %>
                </div>


                <%# View Details Button %>
                <%= link_to product_path(product), class: "block w-full text-center bg-green-600 text-white py-2.5 rounded-lg hover:bg-green-700 transition font-medium min-h-10", data: { turbo_frame: "_top" } do %>
                  View Details
                <% end %>
              </div>
            </div>
          <% end %>
        </div>

        <%# Pagination %>
        <div class="flex justify-center mt-8">
          <%= paginate @products %>
        </div>
      <% else %>
        <%# Empty State %>
        <div class="text-center py-16">
          <div class="text-6xl mb-4">ðŸ“¦</div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">No products found</h3>
          <p class="text-gray-600 mb-6">Try adjusting your search or filters</p>
          <%= link_to "View All Products", products_path, class: "inline-block px-6 py-3 bg-green-600 text-white rounded-lg hover:bg-green-700 transition font-medium" %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

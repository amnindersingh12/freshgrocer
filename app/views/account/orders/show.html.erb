<%# Order Details Page %>
<div class="bg-gray-50 min-h-screen py-8">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <%# Breadcrumb %>
    <nav class="mb-6 text-sm">
      <%= link_to "My Orders", account_orders_path, class: "text-green-600 hover:text-green-700" %>
      <span class="mx-2 text-gray-400">/</span>
      <span class="text-gray-600">Order #<%= @order.id %></span>
    </nav>

    <%# Page Header %>
    <div class="mb-8">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-4">
        <h1 class="text-3xl font-bold text-gray-900 mb-4 sm:mb-0">
          Order #<%= @order.id %>
        </h1>

        <%# Status Badges %>
        <div class="flex flex-wrap gap-2">
          <span class="px-4 py-2 <%= case @order.status
            when 'pending' then 'bg-yellow-100 text-yellow-800'
            when 'processing' then 'bg-blue-100 text-blue-800'
            when 'shipped' then 'bg-purple-100 text-purple-800'
            when 'delivered' then 'bg-green-100 text-green-800'
            when 'cancelled' then 'bg-red-100 text-red-800'
            else 'bg-gray-100 text-gray-800'
          end %> text-sm font-medium rounded-lg">
            <%= @order.status.titleize %>
          </span>

          <span class="px-4 py-2 <%= case @order.payment_status
            when 'unpaid' then 'bg-red-100 text-red-800'
            when 'paid' then 'bg-green-100 text-green-800'
            when 'refunded' then 'bg-gray-100 text-gray-800'
            else 'bg-gray-100 text-gray-800'
          end %> text-sm font-medium rounded-lg">
            <%= @order.payment_status.titleize %>
          </span>
        </div>
      </div>

      <p class="text-gray-600">
        Placed on <%= @order.created_at.strftime('%B %d, %Y at %I:%M %p') %>
      </p>
    </div>

    <%# Order Progress Timeline %>
    <div class="bg-white rounded-lg shadow-md p-6 mb-6">
      <h2 class="text-xl font-semibold text-gray-900 mb-6">Order Progress</h2>

      <div class="relative">
        <%# Progress Line %>
        <div class="absolute left-4 top-0 bottom-0 w-0.5 bg-gray-200"></div>

        <%# Timeline Items %>
        <div class="space-y-6 relative">
          <%# Order Placed %>
          <div class="flex items-start">
            <div class="flex-shrink-0 w-8 h-8 bg-green-600 text-white rounded-full flex items-center justify-center relative z-10">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
            </div>
            <div class="ml-4">
              <p class="font-semibold text-gray-900">Order Placed</p>
              <p class="text-sm text-gray-600"><%= @order.created_at.strftime('%B %d, %Y at %I:%M %p') %></p>
            </div>
          </div>

          <%# Processing %>
          <div class="flex items-start">
            <div class="flex-shrink-0 w-8 h-8 <%= @order.status.in?(['processing', 'shipped', 'delivered']) ? 'bg-green-600 text-white' : 'bg-gray-300 text-gray-600' %> rounded-full flex items-center justify-center relative z-10">
              <% if @order.status.in?(['processing', 'shipped', 'delivered']) %>
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
              <% else %>
                <span class="text-sm">2</span>
              <% end %>
            </div>
            <div class="ml-4">
              <p class="font-semibold text-gray-900">Processing</p>
              <p class="text-sm text-gray-600">Preparing your items</p>
            </div>
          </div>

          <%# Shipped %>
          <div class="flex items-start">
            <div class="flex-shrink-0 w-8 h-8 <%= @order.status.in?(['shipped', 'delivered']) ? 'bg-green-600 text-white' : 'bg-gray-300 text-gray-600' %> rounded-full flex items-center justify-center relative z-10">
              <% if @order.status.in?(['shipped', 'delivered']) %>
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
              <% else %>
                <span class="text-sm">3</span>
              <% end %>
            </div>
            <div class="ml-4">
              <p class="font-semibold text-gray-900">Shipped</p>
              <p class="text-sm text-gray-600">Order on the way</p>
            </div>
          </div>

          <%# Delivered %>
          <div class="flex items-start">
            <div class="flex-shrink-0 w-8 h-8 <%= @order.status == 'delivered' ? 'bg-green-600 text-white' : 'bg-gray-300 text-gray-600' %> rounded-full flex items-center justify-center relative z-10">
              <% if @order.status == 'delivered' %>
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
              <% else %>
                <span class="text-sm">4</span>
              <% end %>
            </div>
            <div class="ml-4">
              <p class="font-semibold text-gray-900">Delivered</p>
              <p class="text-sm text-gray-600">Order completed</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <%# Order Items %>
      <div class="lg:col-span-2">
        <div class="bg-white rounded-lg shadow-md p-6">
          <h2 class="text-xl font-semibold text-gray-900 mb-6">Order Items</h2>

          <div class="space-y-4">
            <% @order.order_items.includes(:product_variant).each do |item| %>
              <div class="flex items-center py-4 border-b border-gray-200 last:border-b-0">
                <%# Product Image Placeholder %>
                <div class="flex-shrink-0 w-20 h-20 bg-gray-200 rounded-lg mr-4"></div>

                <%# Product Info %>
                <div class="flex-1">
                  <h3 class="font-semibold text-gray-900">
                    <%= item.product_variant.product.name %>
                  </h3>
                  <p class="text-sm text-gray-600 mt-1">
                    <%= item.product_variant.variant_name %>
                  </p>
                  <p class="text-sm text-gray-600 mt-1">
                    Quantity: <%= item.quantity %>
                  </p>
                </div>

                <%# Price %>
                <div class="text-right">
                  <p class="font-semibold text-gray-900">
                    $<%= number_with_precision(item.price_at_purchase * item.quantity, precision: 2) %>
                  </p>
                  <p class="text-sm text-gray-600">
                    $<%= number_with_precision(item.price_at_purchase, precision: 2) %> each
                  </p>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <%# Order Summary Sidebar %>
      <div class="lg:col-span-1">
        <%# Order Summary %>
        <div class="bg-white rounded-lg shadow-md p-6 mb-6">
          <h2 class="text-xl font-semibold text-gray-900 mb-6">Order Summary</h2>

          <div class="space-y-3 mb-6">
            <div class="flex justify-between">
              <span class="text-gray-600">Subtotal:</span>
              <span class="font-semibold">$<%= number_with_precision(@order.total_price, precision: 2) %></span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600">Shipping:</span>
              <span class="font-semibold text-green-600">FREE</span>
            </div>
            <div class="border-t border-gray-300 pt-3 flex justify-between text-lg font-bold">
              <span>Total:</span>
              <span class="text-green-600">$<%= number_with_precision(@order.total_price, precision: 2) %></span>
            </div>
          </div>
        </div>

        <%# Delivery Information %>
        <div class="bg-white rounded-lg shadow-md p-6 mb-6">
          <h2 class="text-xl font-semibold text-gray-900 mb-4">Delivery Info</h2>

          <div class="mb-4">
            <p class="text-sm text-gray-600 mb-1">Address</p>
            <p class="font-medium"><%= @order.address.street %></p>
            <p class="text-sm text-gray-700"><%= @order.address.city %>, <%= @order.address.state %> <%= @order.address.zip_code %></p>
            <p class="text-sm text-gray-700"><%= @order.address.country %></p>
          </div>

          <div>
            <p class="text-sm text-gray-600 mb-1">Delivery Time</p>
            <p class="font-medium"><%= @order.delivery_slot.start_time.strftime('%A, %B %d') %></p>
            <p class="text-sm text-gray-700">
              <%= @order.delivery_slot.start_time.strftime('%I:%M %p') %> -
              <%= @order.delivery_slot.end_time.strftime('%I:%M %p') %>
            </p>
          </div>
        </div>

        <%# Actions %>
        <% if @order.status == 'pending' %>
          <div class="bg-white rounded-lg shadow-md p-6">
            <%= button_to "Cancel Order",
                cancel_account_order_path(@order),
                method: :patch,
                data: { turbo_confirm: "Are you sure you want to cancel this order?" },
                class: "w-full px-4 py-3 border border-red-600 text-red-600 rounded-lg hover:bg-red-50 font-medium" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

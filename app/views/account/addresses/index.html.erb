<%# Address Management Page %>
<div class="bg-gray-50 min-h-screen py-8">
  <div class="container mx-auto px-4 max-w-7xl">
    <%# Page Header %>
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">My Account</h1>
      <p class="text-gray-600 mt-2">Manage your delivery addresses</p>
    </div>

    <div class="lg:flex lg:gap-8">
      <%# Sidebar Navigation %>
      <div class="lg:w-64 mb-6 lg:mb-0">
        <%= render 'account/shared/sidebar' %>
      </div>

      <%# Main Content %>
      <div class="flex-1">
        <div class="mb-6 flex justify-between items-center">
          <h2 class="text-2xl font-bold text-gray-900">My Addresses</h2>
          <%= link_to "Add New Address", new_account_address_path,
              class: "px-6 py-3 bg-green-600 text-white rounded-lg hover:bg-green-700 font-medium" %>
        </div>

        <% if @addresses.any? %>
          <%# Addresses Grid %>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <% @addresses.each do |address| %>
              <div class="bg-white rounded-lg shadow-md p-6 relative">
                <%# Default Badge %>
                <% if address.is_default %>
                  <div class="absolute top-4 right-4">
                    <span class="px-3 py-1 bg-green-100 text-green-800 text-xs font-medium rounded-full">
                      Default
                    </span>
                  </div>
                <% end %>

                <%# Address Details %>
                <div class="mb-6">
                  <p class="font-semibold text-gray-900 text-lg mb-2"><%= address.street %></p>
                  <p class="text-gray-700"><%= address.city %>, <%= address.state %> <%= address.zip_code %></p>
                  <p class="text-gray-700"><%= address.country %></p>
                </div>

                <%# Actions %>
                <div class="flex flex-col space-y-2">
                  <%= link_to "Edit", edit_account_address_path(address),
                      class: "text-center px-4 py-2 border border-green-600 text-green-600 rounded-lg hover:bg-green-50 font-medium" %>

                  <% unless address.is_default %>
                    <%= button_to "Set as Default",
                        set_default_account_address_path(address),
                        method: :patch,
                        class: "px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 font-medium" %>
                  <% end %>

                  <%= button_to "Delete",
                      account_address_path(address),
                      method: :delete,
                      data: { turbo_confirm: "Are you sure you want to delete this address?" },
                      class: "px-4 py-2 border border-red-600 text-red-600 rounded-lg hover:bg-red-50 font-medium" %>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <%# Empty State %>
          <div class="bg-white rounded-lg shadow-md p-12 text-center">
            <div class="mb-6">
              <svg class="mx-auto h-24 w-24 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                      d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                      d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
            </div>
            <h2 class="text-2xl font-bold text-gray-900 mb-4">No Addresses Saved</h2>
            <p class="text-gray-600 mb-8">
              Add a delivery address to make checkout faster.
            </p>
            <%= link_to "Add Your First Address", new_account_address_path,
                class: "inline-block px-8 py-3 bg-green-600 text-white rounded-lg hover:bg-green-700 font-bold" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

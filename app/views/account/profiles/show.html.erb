<div class="min-h-screen bg-gray-50 py-8">
  <div class="container mx-auto px-4 max-w-7xl">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">My Account</h1>
      <p class="text-gray-600 mt-2">Manage your profile, orders, and addresses</p>
    </div>

    <div class="lg:flex lg:gap-8">
      <!-- Sidebar Navigation -->
      <div class="lg:w-64 mb-6 lg:mb-0">
        <%= render 'account/shared/sidebar' %>
      </div>

      <!-- Main Content -->
      <div class="flex-1">
        <div class="bg-white rounded-lg shadow-md p-6 md:p-8">
          <div class="flex justify-between items-start mb-6">
            <h2 class="text-2xl font-bold text-gray-900">Profile Information</h2>
            <%= link_to edit_account_profile_path, class: "px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition" do %>
              <svg class="w-5 h-5 inline-block mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
              </svg>
              Edit Profile
            <% end %>
          </div>

          <!-- Profile Details -->
          <div class="space-y-6">
            <!-- Name Section -->
            <div class="grid md:grid-cols-2 gap-6">
              <div>
                <label class="text-sm font-medium text-gray-500">First Name</label>
                <p class="mt-1 text-lg text-gray-900"><%= @user.first_name.presence || 'Not set' %></p>
              </div>
              <div>
                <label class="text-sm font-medium text-gray-500">Last Name</label>
                <p class="mt-1 text-lg text-gray-900"><%= @user.last_name.presence || 'Not set' %></p>
              </div>
            </div>

            <!-- Email -->
            <div>
              <label class="text-sm font-medium text-gray-500">Email Address</label>
              <p class="mt-1 text-lg text-gray-900"><%= @user.email %></p>
            </div>

            <!-- Phone -->
            <div>
              <label class="text-sm font-medium text-gray-500">Phone Number</label>
              <p class="mt-1 text-lg text-gray-900"><%= @user.phone.presence || 'Not set' %></p>
            </div>

            <!-- Account Stats -->
            <div class="border-t pt-6 mt-6">
              <h3 class="text-lg font-semibold text-gray-900 mb-4">Account Statistics</h3>
              <div class="grid md:grid-cols-3 gap-6">
                <div class="bg-gray-50 rounded-lg p-4">
                  <div class="flex items-center">
                    <svg class="w-8 h-8 text-green-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
                    </svg>
                    <div>
                      <p class="text-2xl font-bold text-gray-900"><%= @user.orders.count %></p>
                      <p class="text-sm text-gray-600">Total Orders</p>
                    </div>
                  </div>
                </div>

                <div class="bg-gray-50 rounded-lg p-4">
                  <div class="flex items-center">
                    <svg class="w-8 h-8 text-blue-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                    <div>
                      <p class="text-2xl font-bold text-gray-900"><%= @user.addresses.count %></p>
                      <p class="text-sm text-gray-600">Saved Addresses</p>
                    </div>
                  </div>
                </div>

                <div class="bg-gray-50 rounded-lg p-4">
                  <div class="flex items-center">
                    <svg class="w-8 h-8 text-purple-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                    <div>
                      <p class="text-2xl font-bold text-gray-900"><%= @user.created_at.strftime("%b %Y") %></p>
                      <p class="text-sm text-gray-600">Member Since</p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="min-h-screen bg-gray-50 py-8">
  <div class="container mx-auto px-4 max-w-7xl">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Edit Profile</h1>
      <p class="text-gray-600 mt-2">Update your personal information</p>
    </div>

    <div class="lg:flex lg:gap-8">
      <!-- Sidebar Navigation -->
      <div class="lg:w-64 mb-6 lg:mb-0">
        <%= render 'account/shared/sidebar' %>
      </div>

      <!-- Main Content -->
      <div class="flex-1">
        <div class="bg-white rounded-lg shadow-md p-6 md:p-8">
          <%= form_with(model: @user, url: account_profile_path, method: :patch, class: "space-y-6") do |form| %>
            <% if @user.errors.any? %>
              <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg">
                <h3 class="font-bold mb-2"><%= pluralize(@user.errors.count, "error") %> prohibited this profile from being saved:</h3>
                <ul class="list-disc list-inside">
                  <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="grid md:grid-cols-2 gap-6">
              <!-- First Name -->
              <div>
                <%= form.label :first_name, "First Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
                <%= form.text_field :first_name, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500" %>
              </div>

              <!-- Last Name -->
              <div>
                <%= form.label :last_name, "Last Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
                <%= form.text_field :last_name, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500" %>
              </div>
            </div>

            <!-- Email -->
            <div>
              <%= form.label :email, "Email Address", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.email_field :email, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500" %>
            </div>

            <!-- Phone -->
            <div>
              <%= form.label :phone, "Phone Number", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.text_field :phone, placeholder: "+1 (555) 123-4567", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500" %>
            </div>

            <!-- Actions -->
            <div class="flex gap-4 pt-6 border-t">
              <%= form.submit "Save Changes", class: "px-6 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition font-medium" %>
              <%= link_to "Cancel", account_profile_path, class: "px-6 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition font-medium" %>
            </div>
          <% end %>

          <!-- Change Password Section -->
          <div class="mt-8 pt-8 border-t">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Security</h3>
            <%= link_to edit_user_registration_path, class: "inline-flex items-center px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition" do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z" />
              </svg>
              Change Password
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%# Products Hero Slider Component %>
<section class="product-hero-slider relative overflow-hidden mb-12"
         data-controller="product-slider"
         data-product-slider-interval-value="<%= @interval %>"
         data-product-slider-autoplay-value="<%= @autoplay %>"
         data-product-slider-transition-value="slide"
         role="region"
         aria-label="Featured Products Carousel"
         aria-roledescription="carousel">

  <div class="relative h-[400px] sm:h-[500px] lg:h-[600px]"
       data-action="mouseenter->product-slider#pauseOnHover mouseleave->product-slider#resumeOnLeave"
       tabindex="0">

    <%# Slides %>
    <% @products.each_with_index do |product, index| %>
      <% gradient_class = gradient_classes[index % gradient_classes.length] %>
      <div data-product-slider-target="slide"
           class="absolute inset-0 w-full h-full <%= index == 0 ? 'block' : 'hidden' %>"
           role="group"
           aria-roledescription="slide"
           aria-label="Slide <%= index + 1 %> of <%= @products.count %>">

        <%# Background Gradient Overlay %>
        <div class="absolute inset-0 bg-gradient-to-br <%= gradient_class %>"></div>

        <%# Background Pattern Overlay %>
        <div class="absolute inset-0 opacity-10" style="background-image: radial-gradient(circle at 2px 2px, rgba(255,255,255,0.15) 1px, transparent 0); background-size: 32px 32px;"></div>

        <%# Content Overlay %>
        <div class="relative z-10 w-full h-full flex items-center">
          <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 w-full">
            <div class="max-w-3xl">

              <%# Category Badge %>
              <div class="slide-text-animate mb-4">
                <span class="inline-block px-4 py-2 bg-white/20 backdrop-blur-sm text-white text-sm font-semibold rounded-full border border-white/30">
                  <%= product.category.name %>
                </span>
              </div>

              <%# Product Name %>
              <h2 class="slide-text-animate text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-4 leading-tight"
                  data-product-name>
                <%= product.name %>
              </h2>

              <%# Product Tagline/Description %>
              <p class="slide-text-animate text-lg sm:text-xl md:text-2xl text-white/90 mb-6 max-w-2xl leading-relaxed">
                <%= truncate(product.description, length: 150) %>
              </p>

              <%# Price Display %>
              <% if product.product_variants.kept.any? %>
                <div class="slide-text-animate mb-8">
                  <p class="text-2xl sm:text-3xl font-bold text-white">
                    <% min_price = product.product_variants.kept.minimum(:price) %>
                    Starting at
                    <span class="text-yellow-300">
                      $<%= number_with_precision(min_price, precision: 2) %>
                    </span>
                  </p>

                  <% if product.in_stock? %>
                    <p class="text-sm text-green-300 font-semibold mt-2 flex items-center">
                      <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                      </svg>
                      In Stock - Available Now
                    </p>
                  <% else %>
                    <p class="text-sm text-red-300 font-semibold mt-2">Currently Out of Stock</p>
                  <% end %>
                </div>
              <% end %>

              <%# CTA Buttons %>
              <div class="slide-text-animate flex flex-wrap gap-4">
                <%= link_to product_path(product),
                    class: "inline-flex items-center px-8 py-4 bg-white text-gray-900 font-bold rounded-lg text-lg hover:bg-gray-100 transition-all duration-300 transform hover:scale-105 hover:shadow-xl",
                    data: { turbo_frame: "_top" } do %>
                  View Details
                  <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                  </svg>
                <% end %>

                <% if product.in_stock? %>
                  <%= link_to product_path(product, anchor: "add-to-cart"),
                      class: "inline-flex items-center px-8 py-4 bg-yellow-400 text-gray-900 font-bold rounded-lg text-lg hover:bg-yellow-300 transition-all duration-300 transform hover:scale-105 hover:shadow-xl",
                      data: { turbo_frame: "_top" } do %>
                    <svg class="mr-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"/>
                    </svg>
                    Add to Cart
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <%# Navigation Arrows %>
  <button type="button"
          data-action="click->product-slider#previous"
          data-product-slider-target="prevButton"
          class="absolute left-4 top-1/2 -translate-y-1/2 bg-black/30 hover:bg-black/50 text-white p-3 sm:p-4 rounded-full transition-all duration-300 z-20 hover:scale-110 focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-transparent"
          aria-label="Previous slide">
    <svg class="w-6 h-6 sm:w-8 sm:h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
    </svg>
  </button>

  <button type="button"
          data-action="click->product-slider#next"
          data-product-slider-target="nextButton"
          class="absolute right-4 top-1/2 -translate-y-1/2 bg-black/30 hover:bg-black/50 text-white p-3 sm:p-4 rounded-full transition-all duration-300 z-20 hover:scale-110 focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-transparent"
          aria-label="Next slide">
    <svg class="w-6 h-6 sm:w-8 sm:h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
    </svg>
  </button>

  <%# Dot Navigation %>
  <div class="absolute bottom-6 left-1/2 -translate-x-1/2 flex gap-3 z-20" role="tablist" aria-label="Slide navigation">
    <% @products.each_with_index do |product, index| %>
      <button type="button"
              data-product-slider-target="dot"
              data-index="<%= index %>"
              data-action="click->product-slider#goToSlide"
              class="w-3 h-3 rounded-full <%= index == 0 ? 'bg-white scale-125' : 'bg-white/50 scale-100' %> transition-all duration-300 hover:scale-110 focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-transparent"
              role="tab"
              aria-label="Go to slide <%= index + 1 %>"
              aria-selected="<%= index == 0 ? 'true' : 'false' %>">
      </button>
    <% end %>
  </div>

  <%# Screen Reader Only - Live Region %>
  <div class="sr-only" role="status" aria-live="polite" aria-atomic="true"></div>
</section>

<%# Utility class for screen readers %>
<style>
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border-width: 0;
  }

  .slide-text-animate {
    opacity: 0;
    transform: translateY(20px);
  }
</style>
